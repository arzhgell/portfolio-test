{
  "compilerOptions": {
    "types": ["redux-mock-store"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "downlevelIteration": true,
    "lib": ["es6", "dom", "ES2021.String"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["src", "src/config/declaration.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
